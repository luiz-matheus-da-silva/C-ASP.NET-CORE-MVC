@model LMControleEstoque.Models.Produto

@{
    ViewData["Title"] = "Cadastro de Produto";
}

<h1 class="display-4 mb-3">Cadastro de Produto</h1>
<hr />
<form asp-action="Criar" method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome do Produto:</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="QuantidadeEstoque" class="form-label">Quantidade em Estoque:</label>
        <input asp-for="QuantidadeEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Preco" class="form-label">Preço R$:</label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EstoqueMinimo" class="form-label">Estoque Mínimo:</label>
        <input asp-for="EstoqueMinimo" class="form-control" />
        <span asp-validation-for="EstoqueMinimo" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary btn-success">Cadastrar Produto</button>
        <a role="button" class="btn btn-secondary" asp-controller="Produto" asp-action="Index">Voltar</a>
    </div>
</form>
